function inst(xx)

set ds=document.getelementbyid(xx.id)
if ds.classname="ll" then
	mm=self.location.pathname
	c = split(mm,"\")
	d = replace(mm, c(ubound(c)),"")
	set ws = createobject("wscript.shell")
	set fs = createobject("scripting.filesystemobject") 
	set sa = createobject("shell.application")
	set od = fs.getfolder(d)
end if

r ="cmd /c " & chr(34) & od & "\" & xx.id &  chr(34)
ws.run r,0,true
ws.popup"Installation of" & ds.value & " is complete",3,ds.value
end function


Sub killVid()
		cc =""
		dd =""
		ee =""
		r =""
		set od = nothing
		set oa = nothing
		set uw = nothing
		set sa = nothing
on error resume next

set ws = createobject("wscript.shell") 
set sa = createobject("shell.application")
xtr = 0
sa.undominimizeall
ws.run"taskkill /f /im cmd.exe",0,1
ws.run"taskkill /f /im mshta.exe",0,1


on error goto 0
end sub
i=-1

sub changevid(xx)
set dd = document.getelementbyid("me")
vid ="https://finalfantasylife.com/media/" & xx & ".mp4"
dd.filename = vid

end sub

sub muteToggle()
set dd = document.getelementbyid("me")

if dd.mute="True" then
unmuteIt()

elseif dd.mute="False" then
muteIt()

end if
end sub

sub muteIt()
set dd = document.getelementbyid("me")
set ii = document.getelementbyid("myMuteButton")
ii.src="mute.png"
dd.mute=true 
end sub

sub unmuteIt()
set dd = document.getelementbyid("me")
set ii = document.getelementbyid("myMuteButton")
ii.src="unmute.png"
dd.mute=false
end sub
sub playIt()
set ii = document.getelementbyid("playpause")
set dd = document.getelementbyid("me")
if dd.playstate=2 then
dd.pause
ii.src="pause.png"
else
dd.play
ii.src="play.png"
end if
end sub
